<FrameLayout    android:id="@+id/full_screen_root"
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                xmlns:custom="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context="brainbreaker.cardscanner.FullScreenOCR">

    <com.microblink.view.recognition.RecognizerView
        android:id="@+id/recognizerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        custom:initialOrientation="portrait">

    </com.microblink.view.recognition.RecognizerView>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/sendButton"
        android:text="LOOKS COOL!"
        android:layout_gravity="bottom"/>

</FrameLayout>
